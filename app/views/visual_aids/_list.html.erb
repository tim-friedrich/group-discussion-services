        <% end %>
      </td>
      <td>
        <%= visual_aid.name %>
      </td>
      <td>
      <td><%= link_to 'LÃ¶schen', visual_aids_path+"/"+visual_aid.id.to_s, method: :delete, remote: true, class: "btn btn-xs btn-primary delete_file" %></td>
      </td>
    </tr>

  <% end %>
  </tbody>
</table>

<%= will_paginate visual_aids, renderer: BootstrapPagination::Rails, param_name: "visual_aids_page", params: { controller: 'discussions', action: :edit, id:visual_aids.first().discussion.id }  %>