<div class="form-horizontal devise-links">
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%- if controller_name != 'sessions' %>
        <%= link_to "Bereits registriert? Anmelden", new_session_path(resource_name) %><br />
      <% end %>

      <% if devise_mapping.registerable? && controller_name != 'registrations' %>
        <%= link_to "Als Proband registrieren", new_registration_path(resource_name) %><br />
      <% end %>

      <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
        <%= link_to "Passwort vergessen?", new_password_path(resource_name) %><br />
      <% end %>

      <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <%= link_to "Sie haben keine Bestätigungsemail bekommen?", new_confirmation_path(resource_name) %><br />
      <% end %>

      <% if devise_mapping.omniauthable? %>
        <%- resource_class.omniauth_providers.each do |provider| %>
          <%= link_to "Anmelden über #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %><br />
        <% end %>
      <% end %>
    </div>
  </div>
</div>