<% title 'Anmelden' %>
<h1>Anmelden</h1>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { multipart: true, class: "form-horizontal", role: "form"  }) do |f| %>
  <div class="form-group">
      <%= f.label :email, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.email_field :email, :autofocus => true, class: "form-control", placeholder: "Email" %>
      </div>
  </div>

  <div class="form-group">
      <%= f.label :password, class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
      <%= f.password_field :password, class: "form-control", placeholder: "Passwort" %>
    </div>
  </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <div class="checkbox">
            <%= f.check_box :remember_me %>  <%= f.label :remember_me, type: "checkbox" %>
          </div>
        </div>
        </div>
      <% end %>


  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Anmelden", class: "btn btn-large btn-primary" %>
      </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
