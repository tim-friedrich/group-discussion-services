<%= form_for(@discussion) do |f| %>
  <% if @discussion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@discussion.errors.count, "error") %> prohibited this discussion from being saved:</h2>

      <ul>
      <% @discussion.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :topic %><br>
        <%= f.text_field :topic %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label "Moderator" %>
        <%= f.collection_select(:moderator_id, User.all, :id, :surname) %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-6">
      <div class="field">
        <%= f.label :due_date %><br>
        <%= f.text_field :due_date, :class => 'datepicker form-control', :value => (@discussion.due_date.blank? ? '' : @discussion.due_date.strftime('%d-%m-%Y'))%>
      </div>
      <div class="actions">
        <%= f.submit class: "btn btn-large btn-primary"%>
      </div>
    </div>
  </div>
  
<% end %>
