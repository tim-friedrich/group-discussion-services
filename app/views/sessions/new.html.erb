<h1>Anmelden</h1>

	<div class="col-lg-6">
<div class="form-horizontal">
		<div class="input-group  form-horizontal">
		<%= form_for(:session, url: sessions_path, :html => { :multipart => true }) do |f| %>
				

			<div class="form-group">
				<%= f.label :email, "Email" %>
				<%= f.text_field :email, class: "form-control", placeholder: "Email-Adresse" %>
			</div>
			<div class="form-group">
				<%= f.label :password, "Passwort" %>			
				<%= f.password_field :password, class: "form-control", placeholder: "Passwort" %>
			</div>
			
			<%= f.submit "Anmelden", class: "btn btn-large btn-primary" %>		

			<p>Noch nicht Registriert? <%= link_to "Registrieren", signup_path %> </p>
		</div>	</div>
	</div>
<% end %>
