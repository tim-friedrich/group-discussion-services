<%= form_for(@company, html: { class: 'form-horizontal' }) do |f| %>
  <%= render partial: "shared/error_messages", locals: { resource: @company } %>

  <div class="form-group">
    <div class="field">
      <%= f.label :name, "Name", class: "col-sm-2 control-label" %>
      <div class="col-sm-10">
        <%= f.text_field :name, class: "form-control", autofocus: true %>
      </div>
    </div>
  </div>

  <%= f.fields_for :contact, @company.contact  do |contact_form| %>
    <%= render partial: 'contacts/fields', locals: { f: contact_form } %>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-large btn-primary" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= link_to 'Abbrechen', profile_path %>
    </div>
  </div>

<% end %>
