<div class="form-group clearfix">
  <%= user.label :firstname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :firstname, class: "form-control", placeholder: "Vorname", :autofocus => true %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :lastname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :lastname, class: "form-control", placeholder: "Nachname" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :email, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :email, class: "form-control", placeholder: "Email-Adresse" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :gender, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.select "gender", [["Geschlecht", ""], ["m채nnlich", "male"], ["weiblich", "female"], ["anderes", "other"]], {}, class: "form-control" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :birthday, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :birthday, class: "form-control datepicker", placeholder: "Geburtstag", :"data-date-format" => "dd.mm.yyyy", :"data-alt-date-format" => "yyyy-mm-dd" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :zipcode, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :zipcode, class: "form-control", placeholder: "Postleitzahl" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :city, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :city, class: "form-control", placeholder: "Stadt" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :country, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.country_select :country, { priority_countries: ["DE", "AT", "CH"] },  class: "form-control" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :phone, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :phone, class: "form-control", placeholder: "Telefonnummer" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :industry, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :industry, class: "form-control", placeholder: "Branche" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :password, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.password_field :password, class: "form-control", placeholder: "Passwort" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :password_confirmation, "Passwort best채tigen", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.password_field :password_confirmation, class: "form-control", placeholder: "Passwort best채tigen" %>
  </div>
</div>
<div class="form-group clearfix">
  <div class="checkbox">
    <label class="control-label">
      <%= user.check_box :pseudonym_policy %> Erkl채rung Daten
    </label>
  </div>
</div>
<div class="form-group clearfix">
  <div class="checkbox">
    <label class="control-label">
      <%= user.check_box :can_be_called %> Anrufable?
    </label>
  </div>
</div>
