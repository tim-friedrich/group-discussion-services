<div class="form-group">
  <%= user.label :firstname, "Vorname*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :firstname, class: "form-control", placeholder: "z.B. Maria", autofocus: true, required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :lastname, "Nachname*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :lastname, class: "form-control", placeholder: "z.B. Mustermann", required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :email, "E-Mail*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.email_field :email, class: "form-control", placeholder: "z.B. max.mustermann@example.com", required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :gender, "Geschlecht*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.select "gender", [["Bitte auswählen", ""], ["männlich", "male"], ["weiblich", "female"], ["anderes", "other"]], {}, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= user.label :birthday, "Geburtstag*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :birthday, class: "form-control datepicker", placeholder: "z.B. 1.1.1970", :"data-date-format" => "dd.mm.yyyy", :"data-alt-date-format" => "yyyy-mm-dd", required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :zipcode, "Postleitzahl*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :zipcode, class: "form-control", placeholder: "z.B. 10117", required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :city, "Stadt/Region*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :city, class: "form-control", placeholder: "z.B. Potsdam", required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :country, "Land*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.country_select :country, { priority_countries: ["DE", "AT", "CH"] },  class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= user.label :phone, "Telefon", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :phone, class: "form-control", placeholder: "z.B. 1234567890" %>
    <!-- <p class="help-block">...</p> -->
  </div>
</div>

<div class="form-group">
  <%= user.label :industry, "Branche", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :industry, class: "form-control", placeholder: "z.B. Pflege" %>
    <!-- <p class="help-block">...</p> -->
  </div>
</div>

<% if user.object.is_moderator? %>
  <div class="form-group">
    <%= user.label :avatar, "Avatar", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= user.file_field :avatar, class: "form-control" %>
    </div>
  </div>
<% end %>

<div class="form-group">
  <%= user.label :password, "Passwort*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.password_field :password, class: "form-control", required: true %>
  </div>
</div>

<div class="form-group">
  <%= user.label :password_confirmation, "Passwort bestätigen*", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.password_field :password_confirmation, class: "form-control", required: true %>
  </div>
</div>
