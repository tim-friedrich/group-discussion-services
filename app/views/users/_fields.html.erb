<div class="form-group clearfix">
  <%= user.label :username, class: "col-sm-2 control-label" %>      
  <div class="col-sm-10">
    <%= user.text_field :username, class: "form-control", placeholder: "Benutzername" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :firstname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :firstname, class: "form-control", placeholder: "Vorname", :autofocus => true %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :lastname, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :lastname, class: "form-control", placeholder: "Nachname" %>
  </div>
</div>    
<div class="form-group clearfix">
  <%= user.label :email, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.text_field :email, class: "form-control", placeholder: "Email-Adresse" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :password, class: "col-sm-2 control-label" %>      
  <div class="col-sm-10">
    <%= user.password_field :password, class: "form-control", placeholder: "Passwort" %>
  </div>
</div>
<div class="form-group clearfix">
  <%= user.label :password_confirmation, "Passwort bestätigen", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= user.password_field :password_confirmation, class: "form-control", placeholder: "Passwort bestätigen" %>
  </div>
</div>

  