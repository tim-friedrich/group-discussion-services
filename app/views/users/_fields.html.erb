<div class="form-group">
	<%= user.label :firstname, "Vorname", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= user.text_field :firstname, class: "form-control", placeholder: "Vorname" %>
	</div>
</div>
<div class="form-group">
	<%= user.label :lastname, "Nachname", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= user.text_field :lastname, class: "form-control", placeholder: "Nachname" %>
	</div>
</div>		
<div class="form-group">
	<%= user.label :email, "Email", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= user.text_field :email, class: "form-control", placeholder: "Email-Adresse" %>
	</div>
</div>
<div class="form-group">
	<%= user.label :password, "Passwort", class: "col-sm-2 control-label" %>			
	<div class="col-sm-10">
		<%= user.password_field :password, class: "form-control", placeholder: "Passwort" %>
	</div>
</div>
<div class="form-group">
	<%= user.label :password_confirmation, "Passwort bestätigen", class: "col-sm-2 control-label" %>
	<div class="col-sm-10">
		<%= user.password_field :password_confirmation, class: "form-control", placeholder: "Passwort bestätigen" %>
	</div>
</div>

	