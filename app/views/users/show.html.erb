<p>
  <strong>Alter:</strong>
  <%= @user.age %>
</p>

<p>
  <strong>Geschlecht:</strong>
  <%= @user.gender %>
</p>

<p>
  <strong>Postleitzahl:</strong>
  <%= @user.zipcode %>
</p>

<% if @user.has_survey? %>
  <h3>Pers√∂nlichkeit</h3>
  <%= render partial: 'shared/charts/user', locals: { chart_id: "user-chart", data: @user.survey.scale_values } %>
<% end %>

<h3>Weitere Informationen</h3>
<% @user.additional_informations.each do | key, values | %>
  <p>
    <strong><%= key %>:</strong>
    <% values.each do | value | %>
      <%= value %>
    <% end %>
  </p>
<% end %>
