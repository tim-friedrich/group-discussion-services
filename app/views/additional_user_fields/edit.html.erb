<h1>Benutzerfeld: <%= @additional_user_field.name %></h1>

<%= render 'form'  %>

<h2>Neue Option</h2>

<%= form_tag('/user_field_options', html: { multipart: true, class: "form-horizontal", role: "form"  }) do %>

  <div class="form-group">
    <%= label_tag :values, "Optionen durch Zeilenumbruch trennen", class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_area_tag :values, "", class: "form-control" %>
    </div>
  </div>
  <%= hidden_field_tag :additional_user_field_id, @additional_user_field.id %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= submit_tag "Hinzufügen", class: "btn btn-large btn-primary"%>
    </div>
  </div>
<% end %>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Option</th>
    <th></th>
    <th></th>
  </tr>
  </thead>
  <tbody>
  <% @additional_user_field.user_field_options.each do |option| %>
    <tr>
      <td><%= option.value %></td>
      <td><%= link_to 'Löschen', option, method: :delete, data: { confirm: 'Sind Sie sicher?' }, class: "btn btn-xs btn-primary" %></td>
    </tr>
  <% end %>
  </tbody>
</table>